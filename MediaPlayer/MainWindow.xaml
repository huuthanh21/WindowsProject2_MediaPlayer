        xmlns:local="clr-namespace:MediaPlayerApp"
        x:Name="WindowMain"
        mc:Ignorable="d"
        Closed="WindowMain_Closed"
        Loaded="Window_Loaded"
        Title="MediaPlayer"
        MinWidth="800" MinHeight="600"
        Width="800" Height="600">
