                    <Border x:Name="border"
                                BorderBrush="#2E4057"
                                BorderThickness="1"
                                CornerRadius="5"
                                Margin ="2">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0.5,0"
                                                     EndPoint="0.5,1">
                                <GradientStop Color="White"
                                                  Offset="1.0" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel Orientation="Vertical"
                                        Width="104"
                                        Height="120">
                            <Image Margin ="0 5 0 5 "
                                       Width="60" Height="54"
                                       Source="{Binding Path=Tag}" />
                            <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                        Margin="0 5 0 0">

                                <TextBlock x:Name="nameTextBlock"
                                    TextAlignment="Left"
                                               TextWrapping="WrapWithOverflow"
                                               Width="48"
                                               Foreground="Black"
                                               FontSize="10"
                                               Text="{TemplateBinding Property=Content}"
                                               Style="{StaticResource TextblockTitleSmall}"
                                               Margin="6 0 0 0" />

                                <TextBlock x:Name="priceTextBlock"
                                         Foreground="#0033A1"
                                         HorizontalAlignment="Left"
                                         VerticalAlignment="Top"
                                               Margin="3 0 0 0"
                                         FontSize="12"
                                         Style="{StaticResource TextblockTitleSmall}"
                                         Text="{TemplateBinding Property=Content}" />
                            </StackPanel>
                            <!--<Button Grid.Row="4" Width="30" Height="20" Content="remove"
                                    Command="{Binding Source={StaticResource Proxy}, Path=Data.DeleteCommand}"
                                   CommandParameter="{Binding ElementName=ucStorage}"  />-->
                        </StackPanel>
                    </Border>

                    <ControlTemplate.Triggers>

                        <Trigger Property="IsMouseOver"
                                 Value="True">

                            <Setter Property="Background"
                                    TargetName="border"
                                    Value="#272727" />

                            <Setter Property="BorderBrush"
                                    TargetName="border"
                                    Value="#8C8C8C" />

                            <Setter Property="BorderThickness"
                                    TargetName="border"
                                    Value="3" />
                        </Trigger>

                        <Trigger Property="IsSelected"
                                 Value="True">

                            <Setter Property="Background"
                                    TargetName="border"
                                    Value="#272727" />

                            <Setter Property="BorderBrush"
                                    TargetName="border"
                                    Value="#8C8C8C" />

                            <Setter Property="BorderThickness"
                                    TargetName="border"
                                    Value="3" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
